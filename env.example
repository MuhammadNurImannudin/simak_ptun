# =====================================================
# SIMAK PTUN v2.0 - Environment Configuration Template
# Pengadilan Tata Usaha Negara Banjarmasin
# 
# Copy this file to .env and configure your settings
# NEVER commit .env file to version control!
# =====================================================

# =====================================================
# APPLICATION SETTINGS
# =====================================================

APP_NAME="SIMAK PTUN"
APP_VERSION="2.0.0"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ptun-banjarmasin.go.id
APP_TIMEZONE=Asia/Jakarta

# Institution Information
INSTITUTION_NAME="Pengadilan Tata Usaha Negara Banjarmasin"
INSTITUTION_ADDRESS="Jl. Brig Jend H. Hasan Basry No.3, Pangeran, Banjarmasin Utara, Kota Banjarmasin, Kalimantan Selatan"
INSTITUTION_PHONE="(0511) 3252989"
INSTITUTION_EMAIL="ptun.banjarmasin@go.id"
INSTITUTION_WEBSITE="https://ptun-banjarmasin.go.id"

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=simak_ptun
DB_USERNAME=simak_user
DB_PASSWORD=your_secure_database_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Database Connection Pool (if supported)
DB_POOL_SIZE=10
DB_TIMEOUT=30

# =====================================================
# SESSION CONFIGURATION
# =====================================================

SESSION_DRIVER=file
SESSION_LIFETIME=1800
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# =====================================================
# SECURITY SETTINGS
# =====================================================

# Security Keys (Generate new keys for production!)
APP_KEY=base64:your-32-character-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
CSRF_TOKEN_NAME=_token

# Password Settings
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900
REMEMBER_ME_DURATION=2592000

# =====================================================
# FILE UPLOAD SETTINGS
# =====================================================

UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES="pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif"
UPLOAD_PATH=assets/uploads
UPLOAD_PUBLIC_PATH=assets/uploads

# Image Processing
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85
IMAGE_AUTO_ORIENT=true

# =====================================================
# EMAIL CONFIGURATION
# =====================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ptun-banjarmasin.go.id
MAIL_FROM_NAME="SIMAK PTUN"

# Email Templates
MAIL_TEMPLATE_PATH=templates/emails
MAIL_LOGO_URL=https://ptun-banjarmasin.go.id/assets/images/logo/logo-ptun.png

# =====================================================
# LOGGING CONFIGURATION
# =====================================================

LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DAYS=30
LOG_PATH=logs
LOG_MAX_SIZE=10485760

# Error Reporting
LOG_ERRORS=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_TIME=1.0

# =====================================================
# CACHE CONFIGURATION
# =====================================================

CACHE_DRIVER=file
CACHE_PATH=cache
CACHE_DEFAULT_TTL=3600
CACHE_PREFIX=simak_ptun

# Page Cache
PAGE_CACHE_ENABLED=false
PAGE_CACHE_TTL=300

# =====================================================
# API CONFIGURATION
# =====================================================

API_ENABLED=true
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600
API_TOKEN_EXPIRES=86400

# JWT Settings (if using JWT for API)
JWT_SECRET=your-jwt-secret-key
JWT_TTL=3600
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# =====================================================
# BACKUP CONFIGURATION
# =====================================================

BACKUP_ENABLED=true
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_SIZE=1073741824
BACKUP_COMPRESS=true

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_RETENTION_DAYS=7

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_SCHEDULE="0 3 * * 0"

# =====================================================
# EXTERNAL SERVICES
# =====================================================

# Google Services (if used)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=

# reCAPTCHA (if used)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_VERSION=v2

# SMS Gateway (if used)
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# =====================================================
# PERFORMANCE SETTINGS
# =====================================================

# PHP Settings
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_TIME=300
PHP_POST_MAX_SIZE=50M

# Database Optimization
DB_SLOW_QUERY_LOG=true
DB_SLOW_QUERY_TIME=1.0
DB_QUERY_CACHE_SIZE=128M

# Asset Optimization
ASSET_MINIFY=true
ASSET_COMBINE=true
ASSET_VERSION=2.0.0

# =====================================================
# MONITORING & ANALYTICS
# =====================================================

# Application Monitoring
MONITORING_ENABLED=false
MONITORING_URL=
MONITORING_API_KEY=

# Error Tracking (Sentry, Bugsnag, etc.)
ERROR_TRACKING_DSN=
ERROR_TRACKING_ENVIRONMENT=production

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_TRACKING_ID=

# =====================================================
# FEATURE FLAGS
# =====================================================

# Features
FEATURE_REGISTRATION=false
FEATURE_PASSWORD_RESET=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_API_ACCESS=true
FEATURE_FILE_PREVIEW=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_EXPORT_EXCEL=true
FEATURE_EXPORT_PDF=true

# Experimental Features
FEATURE_DARK_MODE=true
FEATURE_PWA=false
FEATURE_WEBSOCKETS=false
FEATURE_ELASTICSEARCH=false

# =====================================================
# MAINTENANCE SETTINGS
# =====================================================

MAINTENANCE_MODE=false
MAINTENANCE_SECRET=your-maintenance-secret
MAINTENANCE_TEMPLATE=maintenance.html
MAINTENANCE_RETRY_AFTER=3600

# Allowed IPs during maintenance
MAINTENANCE_ALLOWED_IPS="127.0.0.1,::1"

# =====================================================
# DEVELOPMENT SETTINGS (Only for development)
# =====================================================

# Debug Settings (Set to false in production!)
DEBUG_MODE=false
DEBUG_SQL_QUERIES=false
DEBUG_SHOW_ERRORS=false
DEBUG_LOG_LEVEL=error

# Development Tools
DEV_TOOLBAR=false
DEV_PROFILER=false
DEV_MOCK_SERVICES=false

# Testing
TESTING_DATABASE=simak_ptun_test
TESTING_ENABLED=false

# =====================================================
# LOCALIZATION
# =====================================================

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_TIMEZONE=Asia/Jakarta

# Supported Locales
SUPPORTED_LOCALES="id,en"

# Date/Time Format
DATE_FORMAT="d/m/Y"
TIME_FORMAT="H:i"
DATETIME_FORMAT="d/m/Y H:i"

# =====================================================
# INTEGRATION SETTINGS
# =====================================================

# LDAP (if using Active Directory integration)
LDAP_ENABLED=false
LDAP_HOST=
LDAP_PORT=389
LDAP_BASE_DN=
LDAP_USERNAME=
LDAP_PASSWORD=

# Single Sign-On (SSO)
SSO_ENABLED=false
SSO_PROVIDER=
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=

# =====================================================
# CUSTOM SETTINGS
# =====================================================

# Add your custom environment variables below
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2

# =====================================================
# NOTES & REMINDERS
# =====================================================

# 1. Generate new APP_KEY and ENCRYPTION_KEY for production
# 2. Use strong database passwords
# 3. Configure email settings for notifications
# 4. Set up proper backup retention
# 5. Enable HTTPS in production (set SESSION_SECURE_COOKIE=true)
# 6. Configure monitoring and error tracking
# 7. Test all features after configuration
# 8. Keep this file secure and never commit to version control!

# =====================================================
# END OF CONFIGURATION
# =====================================================
